@{
    ViewBag.Title = "EditarCliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Editar Cliente";
}



<h3>@ViewData["Title"]</h3>
<hr />


<form action="/Home/UpdateCliente" method="post" id="editCliente">

    <div class="mb-3">
        <label class="form-label">Id Cliente</label>
        <input type="number" name="id_cliente" value="@Request.QueryString["id"]" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">DNI</label>
        <input type="text" name="dni_txt" class="form-control" value="@Request.QueryString["dni"]" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input type="text" name="nombre_txt" class="form-control" value="@Request.QueryString["nombre"]" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Edad</label>
        <input type="number" name="edad_txt" value="@Request.QueryString["edad"]" class="form-control" required />
    </div>

    <div class="flex-column">
        <a href="https://localhost:44304/Home/Consultar_Clientes"> <btn class="btn btn-danger" style="background:Red" required>Cancelar</btn></a>
        <button type="submit" for="editCliente" class="btn btn-success">Update</button>
    </div>


</form>






