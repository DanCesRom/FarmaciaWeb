@{
    string NombreUsuario = Session["NombreUsuario"] as string;
    string NivelUsuario = Session["NivelUsuario"] as string;
}


<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background: linear-gradient(90deg, rgb(205, 255, 216) 0%, rgb(148, 185, 255) 100%);">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Farmacia Helse", "Index", "Clientes", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Inicio", "Index", "Clientes", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Sucursales", "Sucursales", "Clientes", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Nosotros", "About", "Clientes", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contactenos", "Contact", "Clientes", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>

            @if (!string.IsNullOrEmpty(NombreUsuario))
            {
                <form action="@Url.Action("Logout", "Seguridad")" method="post">
                    <a style="color:aliceblue; margin-right:10px">@NombreUsuario</a>
                    <input style="color:aliceblue; background-color:transparent; " type="submit" value="Logout" />
                </form>
            }

            else
            {
                <form action = "@Url.Action("Login", "Seguridad")" method = "post">
                <input style = "color:aliceblue; background-color: transparent" type = "submit" value = "Login" />
                </form>
            }


        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Farmacia Helse</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

