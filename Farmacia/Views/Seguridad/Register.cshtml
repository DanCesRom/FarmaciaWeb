@{
    ViewBag.Title = "UserAdd";
    Layout = "~/Views/Shared/_LayoutSafe.cshtml";
}

@if (TempData["UserRegisterErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["UserRegisterErrorMessage"]
    </div>
}



<h2>Registrar Cliente</h2>


<div class="col-lg-8">
    <div class="panel panel-default" id="panelEmpleados">
        <div class="panel-heading">Agregar Usuarios:</div>
        <hr style="width:17%;text-align:left;margin-left:0">
        <div class="panel-body">
            <div class="row">
                @*Campos de Textos y Registros*@
            </div>
        </div>


        <div class="col-lg-4">
            <form action="/Seguridad/registrarUsuariosClientes/" method="post" id="formUser">
                <a>Usuario<input type="text" name="idusuario_txt" id="idusuario.txt" class="form-control" formmethod="post" required></a> <br />
                <a>Contraseña<input type="text" name="idclave_txt" id="idclave.txt" class="form-control" formmethod="post" required></a> <br />

                <a href="https://localhost:44304/Seguridad/Login"> <btn class="btn btn-danger" style="background:Red" required>Cancelar</btn></a>
                <input for="formUser" type="submit" value="Agregar" class="btn btn-success glyphicon glyphicon-plus" style="background: green; margin-left: 50px"> <br /> <br />
            </form>
        </div>


    </div>
</div>




